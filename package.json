{
  "name": "sleep-or-else-chrome",
  "displayName": "Sleep or else",
  "version": "1.0.0",
  "description": "A chrome extension for blocking websites (for use with the Sleep or else app)",
  "license": "MIT",
  "scripts": {
    "dev": "vite build -w",
    "build": "vite build",
    "lint": "eslint . --fix -c .eslintrc --ext js,ts,tsx,jsx --ignore-pattern='!.*'",
    "dev:nodemon": "nodemon",
    "build:noemit": "tsc --noEmit && vite build",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prettier": "prettier --write ."
  },
  "type": "module",
  "dependencies": {
    "solid-js": "^1.8.15"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.21",
    "@types/chrome": "0.0.254",
    "@types/jest": "^29.5.12",
    "@types/node": "20.1.2",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "@vitest/coverage-c8": "^0.31.4",
    "autoprefixer": "^10.4.17",
    "babel-preset-solid": "^1.8.15",
    "eslint": "8.40.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-solid": "^0.12.1",
    "eslint-plugin-tailwindcss": "^3.14.3",
    "fs-extra": "11.1.1",
    "jsdom": "^22.1.0",
    "nodemon": "2.0.22",
    "postcss": "^8.4.35",
    "prettier": "2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "tailwindcss": "^3.4.1",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "typescript": "5.0.4",
    "vite": "4.3.5",
    "vite-plugin-solid": "^2.10.1",
    "vitest": "^0.31.4"
  }
}
